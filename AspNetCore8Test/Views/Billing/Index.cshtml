@model IEnumerable<AspNetCore8Test.Models.DTOs.GasDTOs.BillDto>

@{
    ViewData["Title"] = ViewData["Title"] ?? "帳單管理";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-file-invoice-dollar me-2"></i>@ViewData["Title"]
                </h4>
                <div class="btn-group">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>新增帳單
                    </a>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-filter me-1"></i>篩選
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Index">
                                <i class="fas fa-list me-2"></i>所有帳單</a></li>
                            <li><a class="dropdown-item" asp-action="Unpaid">
                                <i class="fas fa-exclamation-circle me-2 text-warning"></i>未付款</a></li>
                            <li><a class="dropdown-item" asp-action="Overdue">
                                <i class="fas fa-clock me-2 text-danger"></i>逾期</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        @TempData["WarningMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (ViewBag.Customer != null)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-user me-2"></i>
                        <strong>客戶：</strong>@ViewBag.Customer.Name (@ViewBag.Customer.CustomerNumber)
                    </div>
                }

                <!-- 帳單統計卡片 -->
                @if (Model != null && Model.Any())
                {
                    var totalAmount = Model.Sum(b => b.TotalAmount);
                    var paidAmount = Model.Sum(b => b.PaidAmount);
                    var unpaidCount = Model.Count(b => b.Status == "Pending" || b.Status == "Partial");
                    var overdueCount = Model.Count(b => (b.Status == "Pending" || b.Status == "Partial") && b.DueDate < DateTime.Today);

                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-title">總金額</h6>
                                            <h4>$@totalAmount.ToString("N0")</h4>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-dollar-sign fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-title">已收款</h6>
                                            <h4>$@paidAmount.ToString("N0")</h4>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-check-circle fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-title">未付款</h6>
                                            <h4>@unpaidCount 筆</h4>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-title">逾期</h6>
                                            <h4>@overdueCount 筆</h4>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-clock fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- 帳單表格 -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>帳單編號</th>
                                <th>客戶</th>
                                <th>錶號</th>
                                <th>計費期間</th>
                                <th>使用量</th>
                                <th>金額</th>
                                <th>狀態</th>
                                <th>到期日</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var bill in Model)
                                {
                                    <tr class="@(bill.Status == "Pending" && bill.DueDate < DateTime.Today ? "table-danger" : "")">
                                        <td>
                                            <strong>@bill.BillNumber</strong>
                                        </td>
                                        <td>
                                            <a asp-action="Customer" asp-route-id="@bill.CustomerId" class="text-decoration-none">
                                                @bill.CustomerName
                                            </a>
                                        </td>
                                        <td>@bill.MeterNumber</td>
                                        <td>
                                            <small>
                                                @bill.BillingPeriodStart.ToString("MM/dd") - 
                                                @bill.BillingPeriodEnd.ToString("MM/dd")
                                            </small>
                                        </td>
                                        <td class="text-end">
                                            @bill.Usage.ToString("N1") m³
                                        </td>
                                        <td class="text-end">
                                            <strong>$@bill.TotalAmount.ToString("N0")</strong>
                                            @if (bill.PaidAmount > 0 && bill.BalanceAmount > 0)
                                            {
                                                <br><small class="text-muted">已付: $@bill.PaidAmount.ToString("N0")</small>
                                            }
                                        </td>
                                        <td>
                                            @if (bill.Status == "Paid")
                                            {
                                                <span class="badge bg-success">已付款</span>
                                            }
                                            else if (bill.Status == "Partial")
                                            {
                                                <span class="badge bg-warning">部分付款</span>
                                            }
                                            else if (bill.DueDate < DateTime.Today)
                                            {
                                                <span class="badge bg-danger">逾期</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">待付款</span>
                                            }
                                        </td>
                                        <td>
                                            @bill.DueDate.ToString("yyyy/MM/dd")
                                            @if (bill.Status != "Paid" && bill.DueDate < DateTime.Today)
                                            {
                                                <br><small class="text-danger">逾期 @((DateTime.Today - bill.DueDate).Days) 天</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@bill.Id" 
                                                   class="btn btn-outline-info" title="檢視詳細">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (bill.Status != "Paid")
                                                {
                                                    <a asp-action="Payment" asp-route-id="@bill.Id" 
                                                       class="btn btn-outline-success" title="付款">
                                                        <i class="fas fa-credit-card"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-4">
                                        <i class="fas fa-file-invoice fa-2x mb-2"></i>
                                        <p>目前沒有帳單資料</p>
                                        <a asp-action="Create" class="btn btn-primary">建立第一筆帳單</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            共 @Model.Count() 筆帳單
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}