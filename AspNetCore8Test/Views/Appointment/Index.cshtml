@model IEnumerable<AspNetCore8Test.Models.LandSurveyorModels.Appointment>

@{
    ViewData["Title"] = "預約管理";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>新增預約
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 統計卡片 -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>今日預約</h6>
                        <h3>@Model.Count(a => a.AppointmentDate.Date == DateTime.Today)</h3>
                    </div>
                    <i class="fas fa-calendar-day fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>待處理預約</h6>
                        <h3>@Model.Count(a => a.Status == AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Scheduled)</h3>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>已完成預約</h6>
                        <h3>@Model.Count(a => a.Status == AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Completed)</h3>
                    </div>
                    <i class="fas fa-check fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>總預約數</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                    <i class="fas fa-calendar fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>預約清單
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>預約主題</th>
                            <th>客戶</th>
                            <th>預約時間</th>
                            <th>時長</th>
                            <th>地點</th>
                            <th>狀態</th>
                            <th class="text-center" style="width: 200px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(a => a.AppointmentDate))
                        {
                            <tr class="@(item.AppointmentDate.Date == DateTime.Today ? "table-info" : "")">
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description.Substring(0, Math.Min(50, item.Description.Length))@(item.Description.Length > 50 ? "..." : "")</small>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-user me-1"></i>
                                    @if (item.Customer != null)
                                    {
                                        @item.Customer.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">未知客戶</span>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <i class="fas fa-calendar me-1"></i>@item.AppointmentDate.ToString("MM/dd")
                                        <i class="fas fa-clock ms-2 me-1"></i>@item.AppointmentTime.ToString(@"hh\:mm")
                                    </div>
                                    @if (item.AppointmentDate.Date == DateTime.Today)
                                    {
                                        <small class="badge bg-info">今日</small>
                                    }
                                    else if (item.AppointmentDate.Date == DateTime.Today.AddDays(1))
                                    {
                                        <small class="badge bg-warning">明日</small>
                                    }
                                    else if (item.AppointmentDate.Date < DateTime.Today)
                                    {
                                        <small class="badge bg-secondary">過去</small>
                                    }
                                </td>
                                <td>
                                    @if (item.EstimatedDuration > 0)
                                    {
                                        <span>@item.EstimatedDuration 分鐘</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">未設定</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Location))
                                    {
                                        <i class="fas fa-map-marker-alt me-1"></i>@item.Location
                                    }
                                    else
                                    {
                                        <span class="text-muted">未設定</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Scheduled:
                                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Confirmed:
                                            <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Completed:
                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Cancelled:
                                            <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Postponed:
                                            <span class="badge bg-dark">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="檢視詳情">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="編輯">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="刪除">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">尚無預約記錄</h5>
                <p class="text-muted mb-3">開始新增第一筆預約吧！</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>新增預約
                </a>
            </div>
        }
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        border-top: none;
    }
    
    .btn-group .btn {
        margin: 0;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .card-body h6 {
        font-size: 0.875rem;
        opacity: 0.9;
    }
    
    .card-body h3 {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }
    
    .table-info {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }
</style>