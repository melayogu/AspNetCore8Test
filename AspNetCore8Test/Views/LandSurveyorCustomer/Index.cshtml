@model IEnumerable<AspNetCore8Test.Models.LandSurveyorModels.Customer>

@{
    ViewData["Title"] = "客戶管理";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>新增客戶
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>客戶清單
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th class="text-center" style="width: 200px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-user me-2 text-muted"></i>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.IdNumber)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Phone))
                                    {
                                        <i class="fas fa-phone me-1"></i>@Html.DisplayFor(modelItem => item.Phone)
                                    }
                                    else
                                    {
                                        <span class="text-muted">未提供</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <i class="fas fa-envelope me-1"></i>@Html.DisplayFor(modelItem => item.Email)
                                    }
                                    else
                                    {
                                        <span class="text-muted">未提供</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>活躍
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause me-1"></i>停用
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="檢視詳情">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="編輯">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="刪除">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">尚無客戶資料</h5>
                <p class="text-muted mb-3">開始新增第一筆客戶資料吧！</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>新增客戶
                </a>
            </div>
        }
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        border-top: none;
    }
    
    .btn-group .btn {
        margin: 0;
    }
    
    .badge {
        font-size: 0.75em;
    }
</style>