@using AspNetCore8Test.Models.LandSurveyorModels
@model AspNetCore8Test.Models.LandSurveyorModels.CaseProgress

@{
    ViewData["Title"] = "新增案件進度";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>返回列表
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-edit me-2"></i>進度詳情</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CaseId" class="form-label">案件</label>
                            <select asp-for="CaseId" class="form-select" asp-items="ViewBag.CaseList" required>
                                <option value="">請選擇案件...</option>
                            </select>
                            <span asp-validation-for="CaseId" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label">狀態</label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="">請選擇狀態...</option>
                                <option value="@((int)CaseStatus.Received)">已收件</option>
                                <option value="@((int)CaseStatus.Processing)">處理中</option>
                                <option value="@((int)CaseStatus.PendingDocuments)">待補件</option>
                                <option value="@((int)CaseStatus.Submitted)">已送件</option>
                                <option value="@((int)CaseStatus.Completed)">已完成</option>
                                <option value="@((int)CaseStatus.Cancelled)">已取消</option>
                            </select>
                            <span asp-validation-for="Status" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AssignedTo" class="form-label">負責人</label>
                            <input asp-for="AssignedTo" class="form-control" placeholder="請輸入負責人姓名">
                            <span asp-validation-for="AssignedTo" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CompletedDate" class="form-label">完成日期</label>
                            <input asp-for="CompletedDate" type="date" class="form-control">
                            <span asp-validation-for="CompletedDate" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">說明</label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="請輸入進度說明或備註..."></textarea>
                        <span asp-validation-for="Notes" class="invalid-feedback"></span>
                    </div>

                    <input asp-for="CreatedDate" type="hidden" />

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times me-1"></i>取消
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>儲存
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>操作說明</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>選擇對應的案件</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>設定當前狀態</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>指派負責人</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>設定預計完成日期</li>
                    <li class="mb-0"><i class="fas fa-check-circle text-success me-2"></i>填寫詳細說明</li>
                </ul>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-lightbulb me-2"></i>狀態說明</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <span class="badge bg-secondary">未開始</span> - 尚未開始執行
                </div>
                <div class="mb-2">
                    <span class="badge bg-warning">進行中</span> - 正在執行中
                </div>
                <div class="mb-2">
                    <span class="badge bg-success">已完成</span> - 已完成
                </div>
                <div class="mb-0">
                    <span class="badge bg-danger">暫停</span> - 暫時停止
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // 表單驗證
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // 設定預設日期為今天
            const today = new Date().toISOString().split('T')[0];
            if (!$('#CompletedDate').val()) {
                $('#CompletedDate').val(today);
            }

            // 自動設定時間戳
            $('#CreatedDate').val(new Date().toISOString());
        });
    </script>
}