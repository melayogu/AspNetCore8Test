@{
    ViewData["Title"] = "碧湖公園管理系統";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- 歡迎橫幅 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-0"><i class="fas fa-tree me-2"></i>碧湖公園管理系統</h2>
                            <p class="mb-0 mt-2">智慧化公園管理，提升運營效率與遊客體驗</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <h5 class="mb-0">今天是 @DateTime.Now.ToString("yyyy年MM月dd日")</h5>
                            <small>@DateTime.Now.ToString("dddd", new System.Globalization.CultureInfo("zh-TW"))</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 快速統計卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">設施總數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalFacilities">載入中...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tools fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">需要維護</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="needsMaintenance">載入中...</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日活動</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todayActivities">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">環境品質</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">良好</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-leaf fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 功能模組區域 -->
    <div class="row">
        <!-- 設施管理 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tools me-2"></i>設施管理</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">管理公園內所有設施，包括維護排程、巡檢記錄和故障報修。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>設施維護管理</li>
                        <li><i class="fas fa-check text-success me-2"></i>巡檢記錄追蹤</li>
                        <li><i class="fas fa-check text-success me-2"></i>故障報修處理</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Facilities", "Park")" class="btn btn-primary">進入管理</a>
                </div>
            </div>
        </div>

        <!-- 植栽管理 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-seedling me-2"></i>植栽管理</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">綠地植物管理，包括植物登記、養護排程和病蟲害監控。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>植物種類登記</li>
                        <li><i class="fas fa-check text-success me-2"></i>澆水施肥排程</li>
                        <li><i class="fas fa-check text-success me-2"></i>病蟲害監控</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Plants", "Park")" class="btn btn-success">進入管理</a>
                </div>
            </div>
        </div>

        <!-- 環境監測 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-thermometer-half me-2"></i>環境監測</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">即時環境數據監測，包括空氣品質、水質和噪音監控。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>空氣品質監測</li>
                        <li><i class="fas fa-check text-success me-2"></i>水質檢測</li>
                        <li><i class="fas fa-check text-success me-2"></i>噪音監控</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Environmental", "Park")" class="btn btn-info text-white">進入監測</a>
                </div>
            </div>
        </div>

        <!-- 遊客服務 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>遊客服務</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">提供遊客導覽、活動預約和回饋處理等服務功能。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>智慧導覽系統</li>
                        <li><i class="fas fa-check text-success me-2"></i>活動預約管理</li>
                        <li><i class="fas fa-check text-success me-2"></i>遊客回饋處理</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Visitors", "Park")" class="btn btn-warning text-dark">進入服務</a>
                </div>
            </div>
        </div>

        <!-- 安全監控 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>安全監控</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">智慧監控系統，保障公園安全和緊急事件處理。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>CCTV 監控系統</li>
                        <li><i class="fas fa-check text-success me-2"></i>人流統計分析</li>
                        <li><i class="fas fa-check text-success me-2"></i>緊急事件通報</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Security", "Park")" class="btn btn-danger">進入監控</a>
                </div>
            </div>
        </div>

        <!-- 數據分析 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>數據分析</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">營運數據分析和效益評估，提供決策支援資訊。</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>遊客流量分析</li>
                        <li><i class="fas fa-check text-success me-2"></i>設施使用率統計</li>
                        <li><i class="fas fa-check text-success me-2"></i>營運效益評估</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Analytics", "Park")" class="btn btn-secondary">查看分析</a>
                </div>
            </div>
        </div>
    </div>

    <!-- 近期活動和公告 -->
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>近期活動</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>活動名稱</th>
                                    <th>日期時間</th>
                                    <th>地點</th>
                                    <th>狀態</th>
                                </tr>
                            </thead>
                            <tbody id="recentActivities">
                                <tr>
                                    <td>生態導覽活動</td>
                                    <td>2024年9月21日 09:00</td>
                                    <td>湖心亭</td>
                                    <td><span class="badge bg-success">進行中</span></td>
                                </tr>
                                <tr>
                                    <td>晨間太極班</td>
                                    <td>2024年9月22日 06:30</td>
                                    <td>東側廣場</td>
                                    <td><span class="badge bg-primary">已預約</span></td>
                                </tr>
                                <tr>
                                    <td>植物識別講座</td>
                                    <td>2024年9月25日 14:00</td>
                                    <td>遊客中心</td>
                                    <td><span class="badge bg-warning">籌備中</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bullhorn me-2"></i>系統公告</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">系統維護通知</h6>
                                <small>3 天前</small>
                            </div>
                            <p class="mb-1">系統將於本週日凌晨進行例行維護。</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">新功能上線</h6>
                                <small>1 週前</small>
                            </div>
                            <p class="mb-1">植栽管理模組新增病蟲害預警功能。</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">培訓通知</h6>
                                <small>2 週前</small>
                            </div>
                            <p class="mb-1">管理系統操作培訓將於下週舉行。</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 載入統計數據
        async function loadStatistics() {
            try {
                // 載入設施統計
                const facilitiesResponse = await fetch('/api/park/facilities');
                const facilities = await facilitiesResponse.json();
                document.getElementById('totalFacilities').textContent = facilities.length;
                
                // 載入需要維護的設施
                const maintenanceResponse = await fetch('/api/park/facilities/needs-maintenance');
                const maintenanceFacilities = await maintenanceResponse.json();
                document.getElementById('needsMaintenance').textContent = maintenanceFacilities.length;
                
            } catch (error) {
                console.error('載入統計數據失敗:', error);
                document.getElementById('totalFacilities').textContent = '載入失敗';
                document.getElementById('needsMaintenance').textContent = '載入失敗';
            }
        }

        // 頁面載入完成後執行
        document.addEventListener('DOMContentLoaded', function() {
            loadStatistics();
        });
    </script>
}

