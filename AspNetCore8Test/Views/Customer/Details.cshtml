@model AspNetCore8Test.Models.DTOs.GasDTOs.CustomerDto

@{
    ViewData["Title"] = "客戶詳細資料";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-user me-2"></i>客戶詳細資料
                </h4>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>編輯
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>返回列表
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">客戶編號：</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary fs-6">@Model.CustomerNumber</span>
                            </dd>

                            <dt class="col-sm-4">客戶姓名：</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">客戶類型：</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.Type == "住宅" ? "info" : Model.Type == "商業" ? "warning" : "success")">
                                    @Model.Type
                                </span>
                            </dd>

                            <dt class="col-sm-4">電話號碼：</dt>
                            <dd class="col-sm-8">
                                <a href="tel:@Model.Phone" class="text-decoration-none">
                                    <i class="fas fa-phone me-1"></i>@Model.Phone
                                </a>
                            </dd>

                            <dt class="col-sm-4">電子郵件：</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i>@Model.Email
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">未提供</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">統一編號：</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.TaxId))
                                {
                                    @Model.TaxId
                                }
                                else
                                {
                                    <span class="text-muted">未提供</span>
                                }
                            </dd>

                            <dt class="col-sm-4">註冊日期：</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-calendar me-1"></i>@Model.RegisterDate.ToString("yyyy年MM月dd日")
                            </dd>

                            <dt class="col-sm-4">狀態：</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Suspended" ? "warning" : "danger")">
                                    @(Model.Status == "Active" ? "啟用" : Model.Status == "Suspended" ? "暫停" : "終止")
                                </span>
                                @if (Model.IsActive)
                                {
                                    <small class="text-success ms-2">
                                        <i class="fas fa-check-circle"></i> 活躍
                                    </small>
                                }
                                else
                                {
                                    <small class="text-danger ms-2">
                                        <i class="fas fa-times-circle"></i> 非活躍
                                    </small>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <h6><i class="fas fa-map-marker-alt me-2"></i>地址資訊</h6>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-0">@Model.Address</p>
                                <small class="text-muted">
                                    <a href="https://maps.google.com/?q=@Uri.EscapeDataString(Model.Address)" 
                                       target="_blank" class="text-decoration-none">
                                        <i class="fas fa-external-link-alt me-1"></i>在地圖中查看
                                    </a>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 操作記錄區域 -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h6><i class="fas fa-history me-2"></i>快速操作</h6>
                        <div class="btn-group" role="toolbar">
                            <button type="button" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-file-invoice me-1"></i>查看帳單
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-tachometer-alt me-1"></i>查看瓦斯錶
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-wrench me-1"></i>服務申請
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        dt {
            font-weight: 600;
            color: #495057;
        }
        
        dd {
            margin-bottom: 0.75rem;
        }
    </style>
}