@model IEnumerable<AspNetCore8Test.Models.LandSurveyorModels.Case>

@{
    ViewData["Title"] = "案件管理";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-folder me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>新增案件
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 統計卡片 -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>處理中案件</h6>
                        <h3>@Model.Count(c => c.Status == AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Processing)</h3>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>已完成案件</h6>
                        <h3>@Model.Count(c => c.Status == AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Completed)</h3>
                    </div>
                    <i class="fas fa-check fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>待補件案件</h6>
                        <h3>@Model.Count(c => c.Status == AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.PendingDocuments)</h3>
                    </div>
                    <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>總案件數</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                    <i class="fas fa-folder fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>案件清單
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>案件編號</th>
                            <th>案件名稱</th>
                            <th>案件類型</th>
                            <th>客戶</th>
                            <th>狀態</th>
                            <th>收件日期</th>
                            <th>預計完成</th>
                            <th>費用</th>
                            <th class="text-center" style="width: 200px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.CaseNumber)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CaseName)</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @Html.DisplayFor(modelItem => item.CaseType)
                                    </span>
                                </td>
                                <td>
                                    <i class="fas fa-user me-1"></i>
                                    @if (item.Customer != null)
                                    {
                                        @item.Customer.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">未知客戶</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Received:
                                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Processing:
                                            <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.PendingDocuments:
                                            <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Submitted:
                                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Completed:
                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                        case AspNetCore8Test.Models.LandSurveyorModels.CaseStatus.Cancelled:
                                            <span class="badge bg-dark">@Html.DisplayFor(modelItem => item.Status)</span>
                                            break;
                                    }
                                </td>
                                <td>@item.ReceivedDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if (item.ExpectedCompletionDate.HasValue)
                                    {
                                        @item.ExpectedCompletionDate.Value.ToString("yyyy/MM/dd")
                                    }
                                    else
                                    {
                                        <span class="text-muted">未設定</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Fee.HasValue)
                                    {
                                        <strong>NT$ @item.Fee.Value.ToString("N0")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">未設定</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="檢視詳情">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="編輯">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="刪除">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">尚無案件資料</h5>
                <p class="text-muted mb-3">開始新增第一筆案件吧！</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>新增案件
                </a>
            </div>
        }
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        border-top: none;
    }
    
    .btn-group .btn {
        margin: 0;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .card-body h6 {
        font-size: 0.875rem;
        opacity: 0.9;
    }
    
    .card-body h3 {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }
</style>