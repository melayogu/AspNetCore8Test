@model IEnumerable<AspNetCore8Test.Models.LandSurveyorModels.Appointment>

@{
    ViewData["Title"] = "預約管理";
    var selectedDate = (DateTime)ViewData["SelectedDate"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <div>
        <a asp-action="Calendar" class="btn btn-outline-info me-2">
            <i class="fas fa-calendar"></i> 行事曆檢視
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> 新增預約
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 日期選擇和篩選 -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label for="selectedDate" class="form-label">選擇日期</label>
                <input type="date" name="selectedDate" class="form-control" 
                       value="@selectedDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label for="status" class="form-label">預約狀態</label>
                <select name="status" class="form-select">
                    <option value="">全部狀態</option>
                    @foreach (var status in Enum.GetValues<AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus>())
                    {
                        var isSelected = ViewData["CurrentStatus"]?.Equals(status) == true ? "selected" : "";
                        <option value="@((int)status)" selected="@isSelected">
                            @status.ToString()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search"></i> 查詢
                </button>
            </div>
            <div class="col-md-3">
                <a asp-action="Index" asp-route-selectedDate="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-calendar-day"></i> 今日
                </a>
            </div>
        </form>
    </div>
</div>

<!-- 預約列表 -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-calendar-day"></i> 
            @selectedDate.ToString("yyyy年MM月dd日 dddd", new System.Globalization.CultureInfo("zh-TW")) 的預約
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var appointment in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-start border-4 border-@GetAppointmentStatusColor(appointment.Status)">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title mb-0">@appointment.AppointmentTime.ToString(@"hh\:mm")</h6>
                                    <span class="badge bg-@GetAppointmentStatusColor(appointment.Status)">
                                        @appointment.Status.ToString()
                                    </span>
                                </div>
                                
                                <p class="card-text">
                                    <strong>@appointment.Title</strong><br>
                                    <small class="text-muted">
                                        <i class="fas fa-user"></i> @appointment.Customer.Name<br>
                                        <i class="fas fa-clock"></i> @appointment.EstimatedDuration 分鐘
                                        @if (!string.IsNullOrEmpty(appointment.Location))
                                        {
                                            <br><i class="fas fa-map-marker-alt"></i> @appointment.Location
                                        }
                                    </small>
                                </p>

                                @if (appointment.Case != null)
                                {
                                    <div class="mb-2">
                                        <small class="text-info">
                                            <i class="fas fa-folder"></i> @appointment.Case.CaseNumber
                                        </small>
                                    </div>
                                }

                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@appointment.Id" 
                                       class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@appointment.Id" 
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    @if (appointment.Status == AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Scheduled)
                                    {
                                        <button type="button" class="btn btn-outline-success" 
                                                onclick="confirmAppointment(@appointment.Id)">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    
                                    @if (appointment.Status != AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Cancelled && 
                                         appointment.Status != AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Completed)
                                    {
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="cancelAppointment(@appointment.Id)">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- 分頁 -->
            @if (ViewData["TotalPages"] != null && (int)ViewData["TotalPages"] > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @{
                            var currentPage = (int)ViewData["CurrentPage"];
                            var totalPages = (int)ViewData["TotalPages"];
                            var status = ViewData["CurrentStatus"];
                        }

                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-pageNumber="@(currentPage - 1)" 
                                   asp-route-selectedDate="@selectedDate.ToString("yyyy-MM-dd")"
                                   asp-route-status="@status">
                                    上一頁
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-pageNumber="@i" 
                                   asp-route-selectedDate="@selectedDate.ToString("yyyy-MM-dd")"
                                   asp-route-status="@status">
                                    @i
                                </a>
                            </li>
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-pageNumber="@(currentPage + 1)" 
                                   asp-route-selectedDate="@selectedDate.ToString("yyyy-MM-dd")"
                                   asp-route-status="@status">
                                    下一頁
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">@selectedDate.ToString("MM月dd日") 沒有預約</h5>
                <p class="text-muted">選擇其他日期或新增預約</p>
                <a asp-action="Create" asp-route-selectedDate="@selectedDate.ToString("yyyy-MM-dd")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> 新增預約
                </a>
            </div>
        }
    </div>
</div>

@functions {
    private string GetAppointmentStatusColor(AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus status)
    {
        return status switch
        {
            AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Scheduled => "warning",
            AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Confirmed => "success",
            AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Completed => "info",
            AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Cancelled => "danger",
            AspNetCore8Test.Models.LandSurveyorModels.AppointmentStatus.Postponed => "secondary",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        function confirmAppointment(id) {
            if (confirm('確定要確認此預約嗎？')) {
                $.post('@Url.Action("Confirm", "Appointments")', { id: id })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    });
            }
        }

        function cancelAppointment(id) {
            if (confirm('確定要取消此預約嗎？')) {
                $.post('@Url.Action("Cancel", "Appointments")', { id: id })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    });
            }
        }

        // 快速切換日期
        $(document).ready(function() {
            $('.btn-group .btn').on('click', function() {
                var selectedDate = $(this).data('date');
                if (selectedDate) {
                    $('input[name="selectedDate"]').val(selectedDate);
                    $('form').submit();
                }
            });
        });
    </script>
}